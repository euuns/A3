<!--            android:id="@+id/textView"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:padding="15dp"-->
<!--            android:text="음식이름"-->
<!--            android:textColor="#333d4b"-->
<!--            android:textSize="18dp" />-->

    </LinearLayout>

</LinearLayout>